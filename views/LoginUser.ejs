<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <title>Log In</title>
</head>
<body class="bg-gradient-to-br from-blue-100 to-gray-200 flex flex-col min-h-screen">

  <% if (error_msg) { %>
    <div id="errorAlert" class="fixed top-8 left-1/2 transform -translate-x-1/2 bg-gray-200 text-red-700 px-8 py-4 rounded-lg z-50 transition-opacity duration-1000">
      <p><%= error_msg %></p>
    </div>
    <script>
      setTimeout(() => {
        const alert = document.getElementById("errorAlert");
        if (alert) {
          alert.style.opacity = "0";
          setTimeout(() => alert.remove(), 1000);
        }
      }, 3000);
    </script>
  <% } %>

  <!-- Page Content Wrapper -->
  <div class="flex-grow flex flex-col">

    <!-- Navbar -->
    <header class="shadow-md bg-gray-200 bg-opacity-80 backdrop-blur-sm fixed w-full top-0 left-0 z-40">
      <nav class="flex h-20 items-center justify-between px-3 py-0 bg-gray-200 bg-opacity-90 shadow-md">
        <div class="flex items-center space-x-4">
          <a href="/"><img src="/images/logo.png" alt="Logo" class="w-48 h-28 md:w-30 md:h-18 rounded-full" /></a>
        </div>
        <div class="hidden md:flex space-x-6 items-center">
          <a href="/user/create" class="text-gray-600 hover:text-blue-600 font-medium transition duration-200">Create</a>
          <a href="/contact" class="text-gray-600 hover:text-blue-600 font-medium transition duration-200">Contact</a>
        </div>
        <div class="md:hidden">
          <button id="menu-toggle" class="text-gray-600 focus:outline-none text-2xl">☰</button>
          <div id="dropdown" class="hidden absolute right-6 mt-2 w-40 bg-white border rounded-md shadow-md z-50">
            <a href="/user/create" class="block px-4 py-2 hover:bg-blue-100 text-gray-600"><i class="fa-solid fa-plus"></i> Create</a>
            <a href="/contact" class="block px-4 py-2 hover:bg-blue-100 text-gray-600"><i class="fa-solid fa-address-book"></i> Contact</a>
          </div>
        </div>
      </nav>
    </header>

    <!-- User Login Form -->
    <main class="flex-grow flex justify-center items-center mt-28 px-4">
      <div class="bg-white p-10 rounded-2xl shadow-xl w-full max-w-md border border-gray-300">
        <h1 class="text-3xl font-bold text-center text-blue-500 mb-8">Log In</h1>

        <!-- Loader (Initially Hidden) -->
        <div id="loader" class="hidden flex justify-center items-center mb-4">
          <div class="animate-spin rounded-full h-8 w-8 border-t-4 border-blue-500"></div>
          <p class="ml-3 text-blue-500 font-medium">Logging in...</p>
        </div>

        <form id="userForm" class="space-y-6">
          <input type="email" name="email" placeholder="Email address" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required />
          <input type="password" name="password" placeholder="Password" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required />

          <button id="submitBtn" type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white px-4 py-3 rounded-lg font-semibold transition-all duration-200">
            Login
          </button>
        </form>

        <!-- Error Message -->
        <p id="errorMessage" class="text-center text-red-500 mt-4 hidden"></p>
      </div>
    </main>

  </div> <!-- End of flex-grow wrapper -->

  <!-- Footer -->
  <footer class="bg-white py-6 text-center text-gray-500 text-sm border-t">
    © <%= new Date().getFullYear() %> Info. All rights reserved. |
    <a href="#privacy" class="hover:text-blue-500">Privacy Policy</a>
  </footer>

  <script>
    document.getElementById("menu-toggle").addEventListener("click", function () {
      const dropdown = document.getElementById("dropdown");
      dropdown.classList.toggle("hidden");
    });
  </script>

  <script src="/javascripts/Loginapiloader.js"></script>
</body>
</html>
